<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Request.Title" class="control-label"></label>
                <input asp-for="Request.Title" class="form-control" />
                <span asp-validation-for="Request.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.Body" class="control-label"></label>
                <input asp-for="Request.Body" class="form-control" />
                <span asp-validation-for="Request.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.Priority" class="control-label"></label>
                <select asp-for="Request.Priority" asp-items="Html.GetEnumSelectList<Priority>()" class="form-control"></select>
                <span asp-validation-for="Request.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

